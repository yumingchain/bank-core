{
    "name": "@radoslaw-medryk/bank-core",
    "private": true,
    "scripts": {
        "prettier": "prettier ./src/**/*.{js,ts,tsx,json} --write",
        "build": "mkdir dist -p && rm -r dist && tsc",
        "start": "node -r ts-node/register src/index.ts",
        "debug": "node --inspect-brk -r ts-node/register src/index.ts",
        "db": "sudo docker run --rm -i -t -e POSTGRES_DB=test -e POSTGRES_PASSWORD=alpine -p 127.0.0.1:5432:5432 postgres",
        "build-swagger": "mkdir ./.swagger -p && rm -r ./.swagger && mkdir ./.swagger -p && swagger-jsdoc -d ./swagger.config.js -o ./.swagger/swagger.json",
        "swagger": "npm run build-swagger && sudo docker run --rm -i -t -e SWAGGER_JSON=/swagger/swagger.json -p 127.0.0.1:8080:8080 -v \"$PWD/.swagger:/swagger\" swaggerapi/swagger-ui"
    },
    "dependencies": {
        "@radoslaw-medryk/tslint": "^0.1.7",
        "@types/big.js": "^4.0.5",
        "@types/koa": "^2.0.48",
        "@types/koa-router": "^7.0.40",
        "@types/module-alias": "^2.0.0",
        "@types/node": "^11.9.5",
        "@types/require-dir": "^1.0.0",
        "@types/slonik": "^15.4.0",
        "big.js": "^5.2.2",
        "koa": "^2.7.0",
        "koa-body": "^4.1.0",
        "koa-router": "^7.4.0",
        "module-alias": "^2.2.0",
        "node": "^11.10.0",
        "pg": "^7.8.1",
        "pg-promise": "^8.6.3",
        "require-dir": "^1.2.0",
        "slonik": "^16.10.0",
        "slonix": "^0.1.6",
        "tslint": "^5.13.0",
        "typescript": "^3.3.3333"
    },
    "devDependencies": {
        "prettier": "^1.16.4",
        "swagger-jsdoc": "^3.2.7",
        "ts-node": "^8.0.2"
    }
}
